pipeline{

    agent any
    
    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
        
        stage("Build"){
            
            steps{
                bat 'dotnet restore'
                bat 'dotnet build'
            }
        
        }
        stage("Test"){
            
            steps{
                bat 'cd Plutus-Tests'
                bat 'dotnet test'
                bat 'cd ..'
            }
        
        }
        
        stage("Autoupdate") {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github')]) {
                    bat 'git remote add destination https://github.com/vekt0R-HUB/Project-2023.git'
                    bat 'git push destination HEAD'
                }
            }
        }
      
    }
    

}